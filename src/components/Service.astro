---
const services = [
	{
		image: '../../public/images/cardio.jpg',
		name: 'Cardio',
		href: '/#',
		description: 'En nuestro plan de cardio encontraras: sumba, ciclismo'
	},
	{
		image: '../../public/images/cardio.jpg',
		name: 'Cardio',
		href: '/#',
		description: 'En nuestro plan de cardio encontraras: sumba, ciclismo'
	}
]
---

{
	services.map((service) => {
		return (
			<article class="card">
				<figure class="card__container">
					<img class="card__img" src={service.image} alt={service.name} />
				</figure>
				<h3 class="card__title">{service.name}</h3>
				<p class="card__text">{service.description}</p>
				<a class="card__cta" href={service.href}>
					Entrar
				</a>
			</article>
		)
	})
}

<style>
	.card {
		width: 100%;
		padding: 1rem 1.5rem;
		border-radius: 0.8rem;
		background: rgba(var(--base-color-white));
	}

	.card__container {
		overflow: hidden;
		border-radius: 0.8rem;
		height: 25rem;
		width: 100%;
		margin-bottom: 1rem;
	}
	.card__img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	.card__title {
		font-size: 2.5rem;
		color: rgba(var(--yellow));
		margin-bottom: 1.5rem;
	}
	.card__text {
		font-size: 1.6rem;
		text-wrap: pretty;
		margin-bottom: 1.5rem;
		color: rgba(var(--black-light));
	}

	.card__cta {
		font-size: 1.6rem;

		text-decoration: none;
		padding: 0.4rem 1rem;
		border-radius: 2.5rem;
		align-self: center;
		color: rgba(var(--black-light));
		background-color: rgba(var(--yellow));
	}
</style>
